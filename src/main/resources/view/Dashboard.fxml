<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.GridPane?>

<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="controllers.ObserverController">

    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Label text="Observer Dashboard" alignment="CENTER">
        <font>
            <Font name="Verdana" size="24.0"/>
        </font>
    </Label>

    <ScrollPane fx:id="dashboardScroll">

        <padding>
            <Insets top="10" right="10" bottom="10" left="10"/>
        </padding>

        <GridPane fx:id="dashboardArea" alignment="center" vgap="10.0" hgap="10.0">

        </GridPane>

    </ScrollPane>

    <Button text="Update" onAction="#updateDashboardButton"/>
    <Button text="back" onAction="#back"/>

</VBox>
