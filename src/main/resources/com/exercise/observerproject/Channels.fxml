<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.layout.GridPane?>
<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.exercise.observerproject.ChannelsController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Label fx:id="notificationMessage"/>

    <Label text="Channels" alignment="CENTER">
        <font>
            <Font name="Verdana" size="24.0"/>
        </font>
    </Label>

    <GridPane prefHeight="50.0" prefWidth="400.0" alignment="center" vgap="10.0" hgap="10.0">
        <Button fx:id="followNews" text="Follow News" onAction="#followNews" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
        <Button fx:id="followFilms" text="Follow Films" onAction="#followFilms" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
    </GridPane>
    <Button fx:id="onDashboard" text="Dashboard" onAction="#onDashboard" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
    <Button fx:id="onBackClick" text="back" onAction="#back" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
</VBox>
